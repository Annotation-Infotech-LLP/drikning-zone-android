                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Order Number"
                        android:textColor="@color/colorBlue"
                        android:textSize="16sp"
                        android:textAlignment="viewStart"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/order_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="S"
                        android:textColor="@color/colorBitterSweet"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Number of Products"
                        android:textColor="@color/colorBlue"
                        android:textSize="16sp"
                        android:textAlignment="viewStart"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/number_of_products"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="S"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Total to be Paid"
                        android:textColor="@color/colorBlue"
                        android:textSize="16sp"
                        android:textAlignment="viewStart"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/amount_to_be_paid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="S"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" /-"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Payment Status"
                        android:textColor="@color/colorBlue"
                        android:textSize="16sp"
                        android:textAlignment="viewStart"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/payment_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="S"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Delivery Time"
                        android:textColor="@color/colorBlue"
                        android:textSize="16sp"
                        android:textAlignment="viewStart"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/delivery_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="S"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Order Status"
                        android:textColor="@color/colorBlue"
                        android:textSize="16sp"
                        android:textAlignment="viewStart"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/order_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="S"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You Can Cancel an Order OR Cancel Button is Enabled only until its Confimed and Accepted by admin."
                    android:textAlignment="viewEnd"
                    android:textSize="10sp"
                    />
